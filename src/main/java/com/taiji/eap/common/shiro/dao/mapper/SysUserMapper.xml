<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.taiji.eap.common.shiro.dao.SysUserDao">
    <resultMap id="BaseResultMap" type="com.taiji.eap.common.shiro.bean.SysUser">
        <id column="user_id" property="userId" jdbcType="DECIMAL"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="salt" property="password" jdbcType="VARCHAR"/>
        <result column="password" property="salt" jdbcType="VARCHAR"/>
        <result column="createtime" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="updatetime" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="valid" property="valid" jdbcType="VARCHAR"/>
        <result column="creater" property="creater" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        USER_ID,USER_NAME,SALT,PASSWORD,CREATETIME,UPDATETIME,VALID,CREATER
    </sql>
    
    <select id="getSysUserByName" resultMap="BaseResultMap" parameterType="string">
        SELECT 
        <include refid="Base_Column_List"></include>
        FROM t_qx_user
        WHERE user_name = #{userName,jdbcType=VARCHAR}
    </select>
</mapper>